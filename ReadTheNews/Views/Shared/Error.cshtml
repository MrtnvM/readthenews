@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Ошибка :(";
}

<h1 class="text-danger">Произошла ошибка.</h1>
<h2 class="text-danger">Во время вашего последнего запроса возникла необработанная ошибка.</h2>
<p>@TempData["Error"]</p>
@if (String.IsNullOrEmpty(TempData["Error"].ToString()))
{
    <img src="~/Content/Images/this-is-not-the-page-youre-looking-for.png" />
}
else
{  
    <img src="~/Content/Images/404-killed-kenny.png" />
}
@{ 
    TempData["Error"] = null;
}

