@using ReadTheNews.Models;
@model RssItem

@{
    string imageSrc = Model.ImageSrc;
    if (String.IsNullOrEmpty(imageSrc)) { 
        imageSrc = Model.RssChannel.ImageSrc;
    }
}

@if (!String.IsNullOrEmpty(imageSrc))
{
    <figure class="item-image">
        <img src="@imageSrc" alt="@Model.Title" />
    </figure>
}