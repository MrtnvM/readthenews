@using ReadTheNews.Models
@model RssChannel

@{
    ViewBag.Title = "RSS-Каналы";
}

<h2>@Model.Title</h2>
<p>@ViewBag.RssChannelTitle</p>
<p>@ViewBag.RssChannelDescription</p>
<div>
    <h4>Данные о Rss-канале</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Language)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Language)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Link)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Link)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ImageSrc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ImageSrc)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PubDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PubDate)
        </dd>

    </dl>
</div>
<ul>
    @foreach (RssItem item in Model.RssItems)
    {
        <li>
            <p>@item.Title</p>
            <p>@item.Description</p>
            <p>@item.Date</p>
            <p>@item.Link</p>
            <p>@item.ImageSrc</p>
            <p>@item.RssCategory.Name</p>
        </li>
    }
</ul>
