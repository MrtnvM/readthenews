@using ReadTheNews.Models
@model RssChannel

@{
    ViewBag.Title = "RSS-Каналы";
}

<h2>@Model.Title</h2>
<h4>@Model.Description</h4>
<h6>Обновлено: @Model.PubDate</h6>
<hr />

@foreach (RssItem item in Model.RssItems)
{
    <div class="col-md-9 gray-bg">
        <div class="ibox">
            <div class="ibox-title">
                <div class="col-md-10">
                    <h5>
                        <a href="@item.Link">@item.Title</a>
                    </h5>
                </div>
                <div class="btn-group col-md-2 news-buttons">
                    <a href="#" class="btn btn-xs btn-primary btn-outline dark remove"><i class="fa fa-remove"></i></a>                    
                    <a href="#" class="btn btn-xs btn-primary btn-outline dark"><i class="fa fa-heart-o"></i></a>
                    <a href="#" class="btn btn-xs btn-primary btn-outline dark "><i class="fa fa-clock-o"></i></a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="row">
                    @Html.Partial("NewsImage", item)
                    <p>@item.Description</p>
                </div>
                    <p style="text-align:right">Опубликовано: <strong>@item.Date.ToLongDateString()</strong></p>
            </div>
        </div>
    </div>
}
